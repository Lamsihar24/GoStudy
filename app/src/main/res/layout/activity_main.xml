<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_marginLeft="25dp"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="#5F9EA0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/user"
                android:src="@drawable/blocks"/>

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="#808080"
                android:textStyle="bold"
                android:layout_below="@+id/user"
                android:layout_centerHorizontal="true"
                android:text="Alphabet"/>


        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="2"
        app:layout_rowWeight="1"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginRight="25dp"
        android:background="#D2691E">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/job"
                android:src="@drawable/number"/>

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#808080"
                android:layout_below="@+id/job"
                android:layout_centerHorizontal="true"
                android:text="Angka"/>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="2"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginLeft="25dp"
        android:layout_column="0"
        android:layout_row="2"
        android:background="#CD5C5C">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/hewan"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/notif"
                android:src="@drawable/chicken"/>

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#808080"
                android:layout_below="@+id/notif"
                android:layout_centerHorizontal="true"
                android:text="Hewan"/>
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="2"
        app:layout_rowWeight="2"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginRight="25dp"
        android:background="#B8860B"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/mail"
                android:src="@drawable/apple"/>
            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#808080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail"
                android:layout_centerHorizontal="true"
                android:text="Buah"/>
        </RelativeLayout>

    </FrameLayout>


    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="3"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginLeft="25dp"
        android:background="#2E8B57"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/rate"
                android:src="@drawable/calculator"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#808080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate"
                android:layout_centerHorizontal="true"
                android:text="Menghitung"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="2"
        app:layout_rowWeight="3"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_column="1"
        android:layout_marginRight="25dp"
        android:layout_row="3"
        android:background="#BC8F8F">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:id="@+id/rev"
                android:src="@drawable/teman"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#808080"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rev"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:text="Daftar Teman "/>
        </RelativeLayout>
    </FrameLayout>

</GridLayout>