<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Membaca">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MARI MEMBACA"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Andi sering bepergian ke luar tanpa meminta izin
            terlebih dahulu kepada keluarganya."
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Andi sangat menyukai membaca buku cerita
            sebelum tidur dimalam hari"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Hari ini saya menginjakkan kaki di umur 20 thn,
            dan saya mendapatkan hadiah yang sangat spesial dari orang
            yang spesial juga"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Hari ini tepatnya saya akan mengumpulkan tugas
            kepada guru saya dibidang matematika"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Philip sangat sering belajar matematika
            dan mengerjakan soal latihan secara mandiri tanpa bantuan orang lain"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Andi sangat menyukai memancing disaat akan terjadi musim hujan,
            bersama saudara - saudaranya. Dan ia pasti akan mendapatkan ikan yang anyak kali ini."
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>

    </LinearLayout>

</ScrollView>